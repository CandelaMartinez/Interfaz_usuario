<Window x:Class="Interfaz_Usuario_INotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interfaz_Usuario_INotifyPropertyChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>

        <Label Content="Nombre"></Label>
        <TextBox Width="100" Height="30" Text="{Binding Path=Nombre, Mode=TwoWay}"></TextBox>
        <Label Content="Apellido"></Label>
        <TextBox Width="100" Height="30" Text="{Binding Path=Apellido, Mode=TwoWay}"></TextBox>
        <Label Content="Nombre Completo"></Label>
        <TextBox Width="100" Height="30" Text="{Binding Path=Nombre_Completo, Mode=TwoWay}"></TextBox>
        
        
    </StackPanel>
    
</Window>
