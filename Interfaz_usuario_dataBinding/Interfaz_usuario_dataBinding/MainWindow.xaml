<Window x:Class="Interfaz_usuario_dataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interfaz_usuario_dataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <TextBox Width="100" Name="MiCuadro" Margin="160" Text="{Binding ElementName=MiSlider,Path=Value,Mode=TwoWay}"></TextBox>

        <Slider Width="350" Name="MiSlider" Minimum="0" Maximum="100" Value="25"></Slider>
        
        
    </StackPanel>
</Window>
